generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String    @id
  name        String
  password    String
  device      Device[]
}

model Device {
  id          String    @id
  name        String
  user        User      @relation(fields: [email], references: [email])
  email       String
  data        Data[]
}

model Data {
  id          String    @id
  device      Device    @relation(fields: [deviceId], references: [id])
  deviceId    String
  date        DateTime
  hour        Int
  visitors    Int
  entered     Int
  exited      Int
}